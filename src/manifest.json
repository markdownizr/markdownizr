{
  "name": "Markdownizr",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "Copy website page content as clean Markdown.",
  "homepage_url": "http://www.markdownizr.com",
  "developer": {
    "name": "Sean Henderson"
  },
  "web_accessible_resources": ["images/*"],
  "icons": {
    "16": "./images/icon16.png",
    "48": "./images/icon48.png",
    "128": "./images/icon128.png"
  },
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "developer@markdownizr.com",
      "strict_min_version": "42.0"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "options_ui": {
    "page": "./options.html"
  },
  "background": {
    "scripts": ["./options-storage.js", "./background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./content.css"],
      "js": ["./content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "./images/icon16.png",
      "48": "./images/icon48.png",
      "128": "./images/icon128.png"
    }
  }
}
