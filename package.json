{
  "name": "markdownizr",
  "description": "Markdownizr is a Google Chrome browser extension for copying markdown from web pages. It was conceived and mostly coded on a warm winter night in California in 2015.",
  "version": "0.1.0",
  "main": "background.js",
  "homepage": "https://github.com/sh78/markdownizr-chrome#README",
  "author": "Sean Henderson <mail@sean.sh>",
  "bugs": {
    "url": "https://github.com/sh78/markdownizr-chrome/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sh78/markdownizr-chrome.git"
  },
  "keywords": [
    "Markdown",
    "Copy",
    "Extension",
    "Plugin",
    "Browser",
    "Chrome",
    "Firefox"
  ],
  "dependencies": {
    "joplin-turndown-plugin-gfm": "^1.0.12",
    "turndown": "^7.0.0",
    "webext-options-sync": "^2.0.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "@parcel/babel-plugin-transform-runtime": "^2.0.0-nightly.1823",
    "@parcel/config-webextension": "^2.0.0-nightly.2258",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-nightly.634",
    "path": "^0.12.7",
    "webextension-polyfill": "^0.7.0"
  },
  "browserslist": "> 0.2%",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {
      "sourceMap": false
    }
  },
  "scripts": {
    "parcel:dev": "parcel src/manifest.json --host localhost --target webext-dev",
    "parcel:build": "parcel build src/manifest.json --target webext-prod",
    "test": "npm run webext:lint",
    "lint": "web-ext lint --source-dir dist",
    "start": "npm-run-all --print-label --parallel parcel:dev webext:run:dev",
    "build": "npm-run-all --print-label --sequential parcel:build webext:lint",
    "webext:run:dev": "web-ext run --source-dir dist",
    "webext:run:prod": "web-ext run --source-dir dist/webext-prod",
    "webext:lint": "web-ext lint --source-dir dist"
  }
}
